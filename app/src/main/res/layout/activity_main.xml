<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    tools:context=".view.MainActivity">

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:background="@drawable/round_button"
        android:src="@drawable/ic_settings"
        android:backgroundTint="@color/background_component_selected"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        />

    <TextView
        android:id="@+id/txtTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="25:00"
        android:textSize="42sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:id="@+id/roundCounterContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTimer"

        >
        <View
            android:id="@+id/viewRound1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:backgroundTint="@color/inactive_cycle"
            android:layout_marginEnd="8dp"
            android:background="@drawable/round_button"
            app:layout_constraintTop_toBottomOf="@+id/txtTimer"/>
        <View
            android:id="@+id/viewRound2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:backgroundTint="@color/inactive_cycle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/round_button"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTimer"/>
        <View
            android:id="@+id/viewRound3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:backgroundTint="@color/inactive_cycle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/round_button"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTimer"/>
        <View
            android:id="@+id/viewRound4"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:backgroundTint="@color/inactive_cycle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/round_button"
            app:layout_constraintTop_toBottomOf="@+id/txtTimer"/>

    </LinearLayout>


    <ProgressBar
        android:id="@+id/ProgressBar"
        style="@style/CircularProgressBar"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:layout_marginTop="140dp"
        android:progress="234"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="100dp"
        android:gravity="center"

        >
        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/round_button"
            android:src="@drawable/ic_play"
            android:backgroundTint="@color/background_button"
            android:gravity="center"

            />

        <ImageButton
            android:id="@+id/btnPause"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/background_button"
            android:src="@drawable/ic_pause"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btnReset"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/round_button"
            android:src="@drawable/ic_reset"
            android:backgroundTint="@color/background_button"
            android:gravity="center"
            android:layout_marginLeft="89dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>