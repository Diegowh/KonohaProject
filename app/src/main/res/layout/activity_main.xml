<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app_focus"
    tools:context=".view.MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="30dp"
        android:paddingHorizontal="30dp"
        >

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/round_button"
            android:src="@drawable/ic_settings"
            android:backgroundTint="@color/background_app_focus"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            android:gravity="center"
            />

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/round_button"
            android:src="@drawable/ic_profile"
            android:backgroundTint="@color/background_app_focus"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:gravity="center"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/footer"

        >
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="370dp"
            android:layout_height="370dp"
            android:progress="75"
            android:max="100"
            android:indeterminateOnly="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/imgCharacter"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:layout_marginTop="68dp"
            android:src="@drawable/sakura_focus_crop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tahoma"
            android:textColor="@color/white"
            android:textSize="42sp"
            app:layout_constraintTop_toBottomOf="@id/progressBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="25:00" />

        <LinearLayout
            android:id="@+id/roundCounterContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTimer"

            >
            <View
                android:id="@+id/viewRound1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:backgroundTint="@color/button_secondary"
                android:layout_marginEnd="8dp"
                android:background="@drawable/round_button"
                app:layout_constraintTop_toBottomOf="@+id/txtTimer"/>
            <View
                android:id="@+id/viewRound2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:backgroundTint="@color/button_secondary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/round_button"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtTimer"/>
            <View
                android:id="@+id/viewRound3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:backgroundTint="@color/button_secondary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/round_button"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtTimer"/>
            <View
                android:id="@+id/viewRound4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:backgroundTint="@color/button_secondary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/round_button"
                app:layout_constraintTop_toBottomOf="@+id/txtTimer"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="60dp"

        >

        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_secondary"
            android:src="@drawable/ic_play"
            app:layout_constraintEnd_toStartOf="@+id/btnReset"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageButton
            android:id="@+id/btnPause"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_secondary"
            android:src="@drawable/ic_pause"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
             />

        <ImageButton
            android:id="@+id/btnReset"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/round_button"
            android:src="@drawable/ic_reset"
            android:backgroundTint="@color/button_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnPlay"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"


            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>