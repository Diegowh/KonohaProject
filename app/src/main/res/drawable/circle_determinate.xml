<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="ring"
            android:thicknessRatio="100"
            android:useLevel="false">
            <solid android:color="@color/button_primary"/>
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="270">
            <shape
                android:shape="ring"
                android:thicknessRatio="100"
                android:useLevel="true"
                android:angle="270">
                <gradient
                    android:endColor="@color/button_primary"
                    android:startColor="@color/button_secondary"
                    android:type="sweep"/>
            </shape>
        </rotate>
    </item>
</layer-list>