<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app_focus"
    tools:context=".view.MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerTopButtons"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/round_button"
            android:src="@drawable/ic_settings"
            android:backgroundTint="@color/background_app_focus"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            />

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/round_button"
            android:src="@drawable/ic_profile"
            android:backgroundTint="@color/background_app_focus"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/containerTopButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        >
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:progress="75"
            android:max="100"
            android:indeterminateOnly="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/imgCharacter"
            android:layout_width="wrap_content"
            android:layout_height="270dp"
            android:src="@drawable/sakura_focus"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tahoma"
            android:textColor="@color/white"
            android:textSize="42sp"
            app:layout_constraintTop_toBottomOf="@id/progressBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="25:00" />

        <LinearLayout
            android:id="@+id/roundCounterContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTimer"

            >
            <View
                android:id="@+id/viewRound1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:backgroundTint="@color/button_secondary"
                android:layout_marginEnd="8dp"
                android:background="@drawable/round_button"
                app:layout_constraintTop_toBottomOf="@+id/txtTimer"/>
            <View
                android:id="@+id/viewRound2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:backgroundTint="@color/button_secondary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/round_button"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtTimer"/>
            <View
                android:id="@+id/viewRound3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:backgroundTint="@color/button_secondary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/round_button"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtTimer"/>
            <View
                android:id="@+id/viewRound4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:backgroundTint="@color/button_secondary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/round_button"
                app:layout_constraintTop_toBottomOf="@+id/txtTimer"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="90dp"
        android:gravity="center"

        >

        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_secondary"
            android:gravity="center"
            android:src="@drawable/ic_play"

            />

        <ImageButton
            android:id="@+id/btnPause"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_secondary"
            android:src="@drawable/ic_pause"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btnReset"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/round_button"
            android:src="@drawable/ic_reset"
            android:backgroundTint="@color/button_secondary"
            android:gravity="center"
            android:layout_marginLeft="89dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>